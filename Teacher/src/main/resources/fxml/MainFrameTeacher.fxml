<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.teacher.gui.ControllerMainFrameTeacher">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="%key.labelWord">
               <VBox.margin>
                  <Insets bottom="6.0" />
               </VBox.margin></Label>
            <Label fx:id="labelWordLesson" prefHeight="171.0" prefWidth="300.0">
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
            </Label>
                <Label fx:id="textAreaTransleate" text="%key.labelTranslate">
                    <VBox.margin>
                        <Insets bottom="6.0" top="6.0" />
                    </VBox.margin>
                </Label>
                <TextArea fx:id="textAreaTranslate" />
            </children>
            <BorderPane.margin>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <Button fx:id="buttonOk" mnemonicParsing="false" onAction="#buttonOkAction" prefHeight="25.0" prefWidth="301.0" text="%key.buttonOk" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="12.0" left="12.0" right="12.0" />
            </BorderPane.margin>
        </Button>
    </bottom>
   <top>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="buttonExit" mnemonicParsing="false" onAction="#actionButtonExit" prefHeight="25.0" prefWidth="103.0" text="%key.buttonExit">
               <GridPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </GridPane.margin>
            </Button>
            <Button fx:id="buttonLearn" mnemonicParsing="false" onAction="#actionButtonLearn" prefHeight="25.0" prefWidth="102.0" text="%key.buttonLearn" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </GridPane.margin>
            </Button>
            <Button fx:id="buttonSettings" mnemonicParsing="false" onAction="#actionButtonSettings" prefHeight="25.0" prefWidth="99.0" text="%key.buttonSettings" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </GridPane.margin>
            </Button>
         </children>
         <padding>
            <Insets left="6.0" right="6.0" top="6.0" />
         </padding>
      </GridPane>
   </top>
</BorderPane>
